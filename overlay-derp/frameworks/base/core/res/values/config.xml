<resources>

  <!-- Whether devices suports in-display fingerprint when screen is off -->
  <bool name="config_supportsScreenOffUdfps">true</bool>

  <!-- Default state for LiveDisplay -->
  <bool name="config_liveDisplayAvailable">false</bool>

  <!-- Whether device has an alert slider -->
  <bool name="config_hasAlertSlider" translatable="false">true</bool>

  <integer name="config_alertSliderLocation">1</integer>

  <!-- Paths to fast charging status file to detect whether an oem fast charger is active -->
  <string-array name="config_oemFastChargerStatusPaths" translatable="false">/sys/devices/virtual/oplus_chg/battery/voocchg_ing</string-array>

  <!-- Paths to OP warp charging status file -->
  <string name="config_opWarpChargerStatusPaths" translatable="false">/sys/devices/virtual/oplus_chg/battery/voocchg_ing</string>

  <!-- Whether device has warp charging support -->
  <bool name="config_hasWarpCharger">true</bool>
</resources>
